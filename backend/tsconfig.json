{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "esnext",

    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,

    "esModuleInterop": true,
    "isolatedModules": true,

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "strict": true,
    "skipLibCheck": true
  }
}
